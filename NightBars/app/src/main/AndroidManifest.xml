<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="nightbars.nightbars">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/app_logo"
        android:label=" "
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name=".LogoActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".LoginActivity"
            android:label="NigthBars"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".SignUpActivity"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".PlacesListActivity"
            android:label="@string/title_activity_places_list"
            android:theme="@style/AppTheme.NoActionBar"
            android:allowBackup="true">
        </activity>
        <activity
            android:name=".AddActivity"
            android:label="New Place +"
            android:theme="@style/AppTheme">
        </activity>
        <activity
            android:name=".LocalActivity"
            android:label="Local details"
            android:theme="@style/AppTheme">
        </activity>
        <activity
            android:name=".MapsActivity"
            android:label="Maps"
            android:theme="@style/AppTheme">
        </activity>
    </application>

</manifest>